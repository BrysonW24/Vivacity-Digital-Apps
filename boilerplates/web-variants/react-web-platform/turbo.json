{
  "$schema": "https://turbo.build/json-schema.json",
  "globalDependencies": [
    "**/.env.local",
    "**/.env"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**"
      ],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".eslintcache"
      ],
      "cache": true
    },
    "type-check": {
      "cache": true
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "coverage/**"
      ],
      "cache": true
    },
    "test:e2e": {
      "cache": false
    },
    "test:integration": {
      "dependsOn": [
        "^build"
      ],
      "cache": false
    },
    "test:load": {
      "cache": false
    },
    "format": {
      "cache": false
    },
    "db:migrate": {
      "cache": false,
      "inputs": [
        "prisma/migrations/**"
      ]
    },
    "db:seed": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    }
  }
}
